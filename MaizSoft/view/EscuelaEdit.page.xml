<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/EscuelaList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{escuelaHome.wire}"/>

   <param name="escuelaFrom"/>
   <param name="escuelaIdEscuela" value="#{escuelaHome.escuelaIdEscuela}"/>
   <param name="facultadFrom"/>
   <param name="facultadIdFacultad" value="#{facultadHome.facultadIdFacultad}"/>



   <navigation from-action="#{escuelaHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Escuela.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{escuelaHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Escuela.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{escuelaHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/EscuelaList.xhtml"/>
      </rule>
   </navigation>

</page>
