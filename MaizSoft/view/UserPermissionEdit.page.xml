<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/UserPermissionList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{userPermissionHome.wire}"/>

   <param name="userPermissionFrom"/>
   <param name="userPermissionId" value="#{userPermissionHome.userPermissionId}"/>


   <navigation from-action="#{userPermissionHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/UserPermission.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userPermissionHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/UserPermission.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{userPermissionHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/UserPermissionList.xhtml"/>
      </rule>
   </navigation>

</page>
