<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/FacultadList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{facultadHome.wire}"/>

   <param name="facultadFrom"/>
   <param name="facultadIdFacultad" value="#{facultadHome.facultadIdFacultad}"/>


   <navigation from-action="#{facultadHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Facultad.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{facultadHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Facultad.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{facultadHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/FacultadList.xhtml"/>
      </rule>
   </navigation>

</page>
