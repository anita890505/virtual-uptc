<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/ActividadList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{actividadHome.wire}"/>

   <param name="actividadFrom"/>
   <param name="actividadIdActividad" value="#{actividadHome.actividadIdActividad}"/>
   <param name="grupoCursoFrom"/>
   <param name="grupoCursoIdGrupo" value="#{grupoCursoHome.grupoCursoIdGrupo}"/>
   <param name="cursoFrom"/>
   <param name="cursoCodigo" value="#{cursoHome.cursoCodigo}"/>
   <param name="escuelaFrom"/>
   <param name="escuelaIdEscuela" value="#{escuelaHome.escuelaIdEscuela}"/>
   <param name="facultadFrom"/>
   <param name="facultadIdFacultad" value="#{facultadHome.facultadIdFacultad}"/>


   <param name="semestreFrom"/>
   <param name="semestreIdSemestre" value="#{semestreHome.semestreIdSemestre}"/>



   <param name="notaFrom"/>
   <param name="notaIdNota" value="#{notaHome.notaIdNota}"/>



   <navigation from-action="#{actividadHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Actividad.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{actividadHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Actividad.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{actividadHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/ActividadList.xhtml"/>
      </rule>
   </navigation>

</page>
