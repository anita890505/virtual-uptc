<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"
      no-conversation-view-id="/SemestreList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{semestreHome.wire}"/>

   <param name="semestreFrom"/>
   <param name="semestreIdSemestre" value="#{semestreHome.semestreIdSemestre}"/>


   <navigation from-action="#{semestreHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Semestre.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{semestreHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Semestre.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{semestreHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/SemestreList.xhtml"/>
      </rule>
   </navigation>

</page>
